<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/exam"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/resources"
    android:layout_marginStart="@dimen/size_10dp"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginEnd="@dimen/size_10dp"
    android:elevation="@dimen/size_5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/size_10dp">

        <!--<RelativeLayout-->
        <!--android:paddingStart="@dimen/size_10dp"-->
        <!--android:id="@+id/exam_title"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginTop="@dimen/size_10dp">-->

        <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentStart="true"-->
        <!--android:text="Upcoming Exam"-->
        <!--android:textColor="@color/black"-->
        <!--android:textSize="@dimen/size_16sp" />-->

        <!--<ImageView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:paddingEnd="@dimen/size_10dp"-->
        <!--android:src="@drawable/right_fill_arrow" />-->

        <!--</RelativeLayout>-->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_title">

            <android.support.v7.widget.CardView
                android:id="@+id/dateCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:elevation="@dimen/size_5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#F2F2F2"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingTop="@dimen/size_10dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:paddingBottom="@dimen/size_10dp">


                    <TextView
                        android:id="@+id/examDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="16"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/text_size_38_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/examMY"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="June, 2019"
                        android:textColor="@color/ashTextColor"
                        android:textSize="@dimen/text_size_10_sp" />


                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_15dp"
                android:layout_toEndOf="@+id/dateCard"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/examName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:padding="@dimen/size_3dp"
                    android:text=""
                    android:textColor="@color/ashTextColor"
                    android:textSize="@dimen/text_size_14_sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size_3dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Obtained: "
                            android:textColor="@color/ashTextColor"
                            android:textSize="@dimen/size_15sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/marks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/size_15sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Full Marks: "
                            android:textColor="@color/ashTextColor"
                            android:textSize="@dimen/size_15sp"
                            android:textStyle="normal" />

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/size_15sp" />
                    </LinearLayout>

                    <!--<TextView-->
                        <!--android:id="@+id/marks"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:paddingEnd="@dimen/size_5dp"-->
                        <!--android:text="20"-->
                        <!--android:textColor="@color/appColor"-->
                        <!--android:textSize="@dimen/size_16sp"-->
                        <!--android:textStyle="bold" />-->

                    <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:gravity="bottom"-->
                        <!--android:text="Marks"-->
                        <!--android:textColor="@color/ashTextColor"-->
                        <!--android:textSize="@dimen/text_size_9_sp"-->
                        <!--android:textStyle="normal" />-->

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>
