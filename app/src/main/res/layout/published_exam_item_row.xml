<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:padding="@dimen/size_10dp">
    <!--android:background="@drawable/assignment_cell_bg"-->

    <RelativeLayout
        android:id="@+id/examCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/examType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fontFamily="@font/robotobold"
            android:maxLines="2"
            android:padding="@dimen/size_10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/size_20sp"
            android:textStyle="normal" />

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/examType"
            android:elevation="@dimen/size_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/size_10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/examName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/robotobold"
                    android:maxLines="2"
                    android:padding="@dimen/size_10dp"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="normal" />

                <RelativeLayout
                    android:id="@+id/presentStatus"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:layout_marginEnd="@dimen/size_5dp"
                    android:orientation="horizontal"
                    android:padding="@dimen/size_5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Obtained: "
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/size_15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/marks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14_sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Exam Marks: "
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/size_15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_14_sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>


</RelativeLayout>
