<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".fragment.CodeEntryFragment">


    <LinearLayout
        android:layout_centerInParent="true"
        android:padding="@dimen/size_20dp"
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Course Name:"
            android:textColor="#B5B5B5"
            android:textSize="@dimen/text_size_12_sp" />

        <TextView
            android:id="@+id/courseName"
            android:padding="@dimen/size_3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CSE 101"
            android:textColor="@color/appColor"
            android:textSize="@dimen/text_size_30_sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Course Code:"
            android:textColor="#B5B5B5"
            android:textSize="@dimen/text_size_12_sp" />

        <TextView
            android:id="@+id/courseCode"
            android:padding="@dimen/size_3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="CSE 101"
            android:textColor="@color/appColor"
            android:textSize="@dimen/text_size_30_sp"
            android:textStyle="bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:gravity="center"
            android:text="Teacher:"
            android:textColor="#B5B5B5"
            android:textSize="@dimen/text_size_12_sp" />

        <TextView
            android:id="@+id/teacherName"
            android:padding="@dimen/size_3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Ab. Rahim"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:gravity="center"
            android:text="Section:"
            android:textColor="#B5B5B5"
            android:textSize="@dimen/text_size_12_sp" />

        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="A"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14_sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_10dp"
            android:gravity="center"
            android:text="Timeline:"
            android:textColor="#B5B5B5"
            android:textSize="@dimen/text_size_12_sp" />

        <TextView
            android:id="@+id/duration"
            android:padding="@dimen/size_3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="15 July, 2019 - 15 Oct, 2019"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_14_sp" />


    </LinearLayout>

    <ImageButton
        android:layout_marginBottom="@dimen/size_20dp"
        android:id="@+id/enrollNow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:background="@null"
        android:paddingTop="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_10dp"
        android:src="@drawable/enroll_ok" />

</RelativeLayout>