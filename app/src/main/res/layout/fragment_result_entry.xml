<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragment.TakeAttendanceFragment">

    <RelativeLayout
        android:id="@+id/tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/size_10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Download" />

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/tv">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <TabWidget
                        android:id="@android:id/tabs"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </HorizontalScrollView>

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </FrameLayout>

            </LinearLayout>

        </TabHost>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/header"
        android:layout_below="@+id/tab"
        android:elevation="@dimen/size_3dp"
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_marginRight="@dimen/size_10dp"
        android:background="@color/appColor"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:id="@+id/subject"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/my_custom_bold_font"
            android:textSize="@dimen/text_size_16_sp"
            android:padding="@dimen/size_10dp"
            android:text="Course"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>

        <TextView
            android:textStyle="bold"
            android:id="@+id/gradePoint"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/my_custom_bold_font"
            android:textSize="@dimen/text_size_16_sp"
            android:text="Grade Point"
            android:layout_weight="1.2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <View
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:background="@color/white"
            android:layout_width="1dp"
            android:layout_height="match_parent"/>
        <TextView
            android:textStyle="bold"
            android:id="@+id/grade"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/my_custom_bold_font"
            android:textSize="@dimen/text_size_16_sp"
            android:padding="@dimen/size_10dp"
            android:text="Grade"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:background="@null"
        android:scrollbars="vertical"
        app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:background="@color/white"
        android:padding="20dp">

        <Button
            android:layout_alignParentStart="true"
            android:id="@+id/reset_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/square_border_app_color"
            android:text="@string/reset"
            android:textColor="@color/appColor" />

        <Button
            android:layout_alignParentEnd="true"
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_red_back"
            android:text="@string/txt_save"
            android:textColor="@color/white" />

    </RelativeLayout>


</RelativeLayout>