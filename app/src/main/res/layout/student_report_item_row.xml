<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingStart="@dimen/size_5dp"
            android:paddingEnd="@dimen/size_5dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/ashColor"
                app:civ_border_width="2dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.6"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size_5dp">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/my_custom_medium_font"
                android:gravity="center"
                android:padding="@dimen/size_5dp"
                android:text="Francine Bradley"
                android:textColor="@color/ashTextColor"
                android:textSize="@dimen/size_15sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/studentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/my_custom_medium_font"
                android:gravity="center"
                android:text="142362020"
                android:textColor="@color/ash_b5"
                android:textSize="@dimen/text_size_10_sp"
                android:textStyle="normal" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/viewLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D8D8D8"
                android:fontFamily="@font/my_custom_medium_font"
                android:gravity="center"
                android:padding="@dimen/size_5dp"
                android:text="Present"
                android:textColor="@color/ashTextColor"
                android:textSize="@dimen/text_size_12_sp"
                android:textStyle="normal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/dayCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/my_custom_medium_font"
                    android:gravity="center"
                    android:text="15"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_18_sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_alignParentBottom="true"
                    android:layout_toEndOf="@+id/dayCount"
                    android:id="@+id/dayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/my_custom_medium_font"
                    android:text="Classes"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_8_sp"
                    android:textStyle="normal" />

            </RelativeLayout>

            <TextView
                android:id="@+id/parcent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/my_custom_medium_font"
                android:gravity="center"
                android:text="94%"
                android:textColor="#4495FF"
                android:textSize="@dimen/text_size_18_sp"
                android:textStyle="normal" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>
