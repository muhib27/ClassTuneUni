<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingTop="@dimen/size_20dp">

                <TextView
                    android:textAlignment="center"
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:text=""
                    android:textColor="@color/ashTextColor"
                    android:textSize="@dimen/size_15sp" />

                <TextView
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:lineSpacingExtra="10dp"
                    android:paddingStart="@dimen/size_20dp"
                    android:paddingEnd="@dimen/size_20dp"
                    android:text="Already verified? Login"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/size_17sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="@dimen/size_5dp"
                    android:background="@drawable/input_field_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <EditText
                        android:id="@+id/et_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="@string/enter_code"
                        android:imeOptions="actionNext"
                        android:includeFontPadding="true"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="@color/appColor"
                        android:textColorHint="@color/ashTextColor"
                        android:textCursorDrawable="@null"
                        android:textSize="@dimen/size_15sp">

                        <requestFocus />
                    </EditText>
                </LinearLayout>

                <!--<Button-->
                <!--android:id="@+id/ok"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginTop="@dimen/size_20dp"-->
                <!--android:layout_marginEnd="@dimen/size_20dp"-->
                <!--android:background="@drawable/app_button_bg"-->
                <!--android:paddingLeft="@dimen/size_20dp"-->
                <!--android:paddingTop="@dimen/size_5dp"-->
                <!--android:paddingRight="@dimen/size_20dp"-->
                <!--android:paddingBottom="@dimen/size_5dp"-->
                <!--android:text="Ok"-->
                <!--android:textAllCaps="false"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="@dimen/size_20sp"-->
                <!--android:textStyle="normal" />-->

                <!--</RelativeLayout>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:gravity="center">

                    <Button
                        android:id="@+id/resend"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/size_45dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/app_ash_button_bg"
                        android:gravity="center"
                        android:text="Resend"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_14_sp"
                        android:textStyle="bold" />


                    <Button
                        android:id="@+id/ok"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/app_button_bg"
                        android:gravity="center"
                        android:text="OK"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14_sp"
                        android:textStyle="bold" />
                </LinearLayout>


            </LinearLayout>
        </FrameLayout>

        <ImageView
            android:id="@+id/close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="right|top"
            android:contentDescription="@string/contentDescription"
            android:src="@drawable/ic_cancel" />
    </FrameLayout>
    </FrameLayout>
