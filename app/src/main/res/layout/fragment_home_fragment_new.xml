            android:layout_marginEnd="@dimen/size_10dp"
            android:elevation="@dimen/size_5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".9">

                    <ImageView
                        android:id="@+id/courseImg"
                        android:layout_width="135dp"
                        android:layout_height="163dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/demo_img" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:src="@drawable/half_circle_bg" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:background="@color/white">

                    <RelativeLayout
                        android:id="@+id/nxt_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/size_10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="Next Class"
                            android:textColor="@color/black"
                            android:textSize="@dimen/size_16sp" />

                        <ImageView
                            android:paddingStart="@dimen/size_10dp"
                            android:id="@+id/classSchedudle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingEnd="@dimen/size_10dp"
                            android:src="@drawable/right_fill_arrow" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/next_subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
