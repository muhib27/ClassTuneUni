            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/notice1Ll"
                android:layout_marginEnd="@dimen/size_5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/notice1Date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19 july 2019"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_9_sp" />

                <TextView
                    android:id="@+id/notice1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:maxLines="2"
                    android:text="@string/title"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_13_sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/notice2Ll"
                android:layout_marginStart="@dimen/size_5dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/notice2Date"
                    android:layout_width="wrap_content"
