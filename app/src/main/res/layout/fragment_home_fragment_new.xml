                    <View
                        android:id="@+id/next_view"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/size_1dp"
                        android:layout_below="@id/next_instructor"
                        android:layout_marginTop="@dimen/size_20dp"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:background="@color/menu_divider" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/next_view"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:paddingEnd="@dimen/size_10dp">

                        <TextView
                            android:id="@+id/dayText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_marginTop="@dimen/size_3dp"
                            android:text="Next Class"
                            android:textColor="@color/ashTextColor"
                            android:textSize="@dimen/text_size_9_sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_3dp"
                            android:layout_toStartOf="@+id/room"
                            android:text="Room: "
                            android:textColor="@color/ashTextColor"
                            android:textSize="@dimen/text_size_9_sp" />

                        <TextView
                            android:id="@+id/room"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginTop="@dimen/size_3dp"
                            android:text="401"
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/text_size_10_sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </RelativeLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/assessmentCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nextClass"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:elevation="@dimen/size_5dp">

            <RelativeLayout
                android:paddingBottom="@dimen/size_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/assessmentTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:text="Assignment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_16sp" />
                    <ImageView
                        android:paddingStart="@dimen/size_10dp"
                        android:id="@+id/assignments"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="@dimen/size_10dp"
                        android:src="@drawable/right_fill_arrow" />

                    <!--<LinearLayout-->
                        <!--android:id="@+id/tab"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_alignParentEnd="true"-->
                        <!--android:orientation="horizontal">-->

                        <!--<TextView-->
                            <!--android:id="@+id/content"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:background="@color/appColor"-->
                            <!--android:gravity="center"-->
