                            <!--android:background="@color/menu_divider"-->
                            <!--android:gravity="center"-->
                            <!--android:padding="@dimen/size_10dp"-->
                            <!--android:text="Submitted"-->
                            <!--android:textSize="17sp" />-->

                    <!--</LinearLayout>-->

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/assessmentTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/assessmentTop"
                    android:background="@color/black"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:id="@+id/noText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="No."
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/noText"
                        android:paddingStart="@dimen/size_20dp"
                        android:text="Title"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13_sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="@dimen/size_20dp"
                        android:text="Due Date"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_13_sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvAssignment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/assessmentTitle"
                    android:background="@null"
                    android:scrollbars="vertical"
                    app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/resources"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/assessmentCard"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:elevation="@dimen/size_5dp">

            <RelativeLayout
                android:paddingBottom="@dimen/size_30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:paddingStart="@dimen/size_10dp"
                    android:id="@+id/resources_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Latest Resources"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_16sp" />

                    <ImageView
                        android:id="@+id/resourceList"
                        android:paddingStart="@dimen/size_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="@dimen/size_10dp"
                        android:src="@drawable/right_fill_arrow" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvResources"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/resources_title"
                    android:background="@null"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:scrollbars="vertical"
                    app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/upcomingExam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/resources"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:elevation="@dimen/size_5dp">

            <RelativeLayout
                android:paddingBottom="@dimen/size_30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:paddingStart="@dimen/size_10dp"
                    android:id="@+id/exam_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Upcoming Exam"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_16sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="@dimen/size_10dp"
                        android:src="@drawable/right_fill_arrow" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/exam_title">

                    <android.support.v7.widget.CardView
                        android:id="@+id/examDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:elevation="@dimen/size_5dp">

                        <LinearLayout
                            android:background="#F2F2F2"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:paddingBottom="@dimen/size_10dp"
                            android:paddingTop="@dimen/size_10dp"
                            android:paddingEnd="@dimen/size_20dp"
                            android:paddingStart="@dimen/size_20dp">

                            <TextView
                                android:id="@+id/upcomingExamDay"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="Monday"
                                android:textColor="@color/ashTextColor"
                                android:textSize="@dimen/text_size_10_sp" />

                            <TextView
                                android:id="@+id/upcomingExamDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="16"
                                android:textStyle="bold"
                                android:textColor="@color/appColor"
                                android:textSize="@dimen/text_size_38_sp" />

                            <TextView
                                android:id="@+id/upcomingExamMY"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentStart="true"
                                android:text="June, 2019"
                                android:textColor="@color/ashTextColor"
                                android:textSize="@dimen/text_size_10_sp" />


                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                    <LinearLayout
                        android:layout_marginStart="@dimen/size_15dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@+id/examDate"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:padding="@dimen/size_3dp"
                            android:id="@+id/examName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_10dp"
                            android:text="Mid Term"
                            android:textColor="@color/ashTextColor"
                            android:textSize="@dimen/text_size_14_sp" />

                        <LinearLayout
                            android:padding="@dimen/size_3dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/examTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11:00am"
                                android:textColor="@color/appColor"
                                android:textSize="@dimen/size_16sp"
                                android:textStyle="bold" />

                            <View
                                android:id="@+id/examDotView"
                                android:layout_width="@dimen/size_10dp"
                                android:layout_height="@dimen/size_10dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/size_10dp"
                                android:layout_marginRight="@dimen/size_10dp"
                                android:background="@drawable/filled_circle_ash" />

                            <TextView
                                android:paddingEnd="@dimen/size_5dp"
                                android:id="@+id/marks"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:textColor="@color/appColor"
                                android:textSize="@dimen/size_16sp"
                                android:textStyle="bold" />
                            <TextView
                                android:gravity="bottom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Marks"
                                android:textColor="@color/ashTextColor"
                                android:textSize="@dimen/text_size_9_sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <TextView
                            android:padding="@dimen/size_3dp"
                            android:id="@+id/examSubject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/next_time"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/size_3dp"
                            android:text="Advence Software Engineering"
                            android:textColor="@color/ashTextColor"
                            android:textSize="@dimen/text_size_12_sp" />

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
