            android:layout_height="wrap_content"
            android:layout_below="@+id/upcomingExam"
            android:layout_marginStart="@dimen/size_10dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginEnd="@dimen/size_10dp"
            android:elevation="@dimen/size_5dp">

            <RelativeLayout
                android:paddingBottom="@dimen/size_10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:paddingBottom="@dimen/size_10dp"
                    android:paddingStart="@dimen/size_10dp"
                    android:id="@+id/notice_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:text="Notice"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_16sp" />

                    <ImageView
                        android:id="@+id/notices"
                        android:paddingStart="@dimen/size_10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingEnd="@dimen/size_10dp"
                        android:src="@drawable/right_fill_arrow" />

                </RelativeLayout>
                <View
                    android:layout_marginBottom="@dimen/size_10dp"
                    android:id="@+id/notice_devider"
                    android:layout_below="@+id/notice_title"
                    android:background="@color/menu_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rvNotice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notice_devider"
                    android:background="@null"
                    android:scrollbars="vertical"
                    app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


</android.support.v4.widget.NestedScrollView>


