        </RelativeLayout>

        <TextView
            android:layout_below="@+id/top"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:padding="@dimen/size_10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/size_20sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/basicinfoRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:padding="@dimen/size_5dp">

            <LinearLayout
                android:id="@+id/basicInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:padding="@dimen/size_10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Md. Rohim"
                            android:textSize="@dimen/text_size_12_sp" />

                        <View
                            android:layout_width="@dimen/size_10dp"
                            android:layout_height="@dimen/size_10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/size_10dp"
                            android:layout_marginRight="@dimen/size_10dp"
                            android:background="@drawable/filled_circle" />

                        <TextView
                            android:maxLength="20"
                            android:id="@+id/course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CSE 101"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_12_sp" />

                    </LinearLayout>


                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/assignDateText"
                        android:textSize="@dimen/text_size_12_sp" />

                    <TextView
                        android:id="@+id/assignedDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:text=""
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dueDateText"
                        android:textSize="@dimen/text_size_12_sp" />

                    <TextView
                        android:id="@+id/dueDate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:text="22 Julu, 2019"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textSize="@dimen/text_size_12_sp" />

                    <TextView
                        android:id="@+id/status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_10dp"
                        android:text="Submited"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/text_size_12_sp"
                        android:textStyle="bold" />

                    <!--<ImageView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_marginLeft="@dimen/size_10dp"-->
                    <!--android:src="@drawable/ic_add_black_24dp" />-->


                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_marginEnd="@dimen/size_5dp"
                card_view:cardElevation="4dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/size_10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/totalObtained"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/size_20dp"
                        android:paddingRight="@dimen/size_20dp"
                        android:text="-"
                        android:textSize="@dimen/text_size_25_sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#B5B5B5"
                        android:paddingLeft="@dimen/size_10dp"
                        android:paddingRight="@dimen/size_10dp"/>

                    <TextView
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/size_20dp"
                        android:paddingRight="@dimen/size_20dp"
                        android:text="10"
                        android:textSize="@dimen/text_size_25_sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <TextView
                android:layout_marginStart="@dimen/size_10dp"
                android:textSize="@dimen/size_15sp"
                android:id="@+id/desText"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_below="@+id/basicInfo"
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_below="@+id/desText"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <WebView
                android:layout_marginStart="@dimen/size_5dp"
                android:id="@+id/description"
                android:textSize="@dimen/text_size_13_sp"
                android:textStyle="normal"
                android:layout_marginTop="@dimen/size_10dp"
                android:text="Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/basicinfoRl"
            android:background="@null"
            android:scrollbars="vertical"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />

        <Button
            android:id="@+id/viewSubmission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recyclerView"
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_marginTop="@dimen/size_30dp"
            android:layout_marginEnd="@dimen/size_20dp"
            android:background="@drawable/app_button_blue_bg"
            android:fontFamily="@font/robotobold"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_5dp"
            android:text="View Submission"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_25_sp" />
    </RelativeLayout>

</ScrollView>