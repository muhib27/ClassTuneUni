<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/resources"
    android:layout_marginStart="@dimen/size_10dp"
    android:layout_marginTop="@dimen/size_5dp"
    android:layout_marginEnd="@dimen/size_10dp"
    android:elevation="@dimen/size_5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_title">

            <LinearLayout
                android:paddingBottom="@dimen/size_10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_marginEnd="@dimen/size_10dp"
                android:layout_toEndOf="@+id/dateCard"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/quizName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:padding="@dimen/size_3dp"
                    android:text=""
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_17sp" />
                <TextView
                    android:id="@+id/quizSubject"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:padding="@dimen/size_3dp"
                    android:text=""
                    android:textColor="@color/ash_b5"
                    android:textSize="@dimen/text_size_14_sp" />

                <RelativeLayout
                    android:paddingBottom="@dimen/size_10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size_3dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true">

                        <TextView
                            android:id="@+id/title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start Date: "
                            android:textColor="@color/ashTextColor"
                            android:textSize="@dimen/text_size_12_sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/startDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textStyle="bold"
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="End Date: "
                            android:textColor="@color/ashTextColor"
                            android:textSize="@dimen/text_size_12_sp"
                            android:textStyle="normal" />

                        <TextView
                            android:textStyle="bold"
                            android:id="@+id/endDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/text_size_12_sp" />
                    </LinearLayout>


                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>
</android.support.v7.widget.CardView>
