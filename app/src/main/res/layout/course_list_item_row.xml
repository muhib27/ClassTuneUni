    <LinearLayout
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/group_img_circle"
        android:orientation="vertical"
        android:padding="@dimen/size_5dp">

       <TextView
           android:id="@+id/credit"
           android:textColor="@color/appColor"
           android:textSize="@dimen/text_size_25_sp"
           android:text="3"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />

        <TextView
            android:textSize="@dimen/text_size_12_sp"
            android:text="credit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="@dimen/size_10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/size_5dp">

        <TextView
            android:id="@+id/courseName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/my_custom_medium_font"
            android:gravity="left"
            android:maxLines="2"
            android:padding="@dimen/size_5dp"
            android:text="Advanced Software Engineering"
            android:textColor="@color/appColor"
            android:textSize="@dimen/size_16sp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginStart="@dimen/size_5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/courseCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Code: CSE 101"
                android:textSize="@dimen/text_size_9_sp" />

            <View
                android:layout_width="@dimen/size_10dp"
                android:layout_height="@dimen/size_10dp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:background="@drawable/filled_circle_ash" />

            <!--<TextView-->
                <!--android:id="@+id/subject"-->
