<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragment.TeacherNoticeDetails">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_20dp">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/size_10dp"
            android:background="@drawable/selected"
            android:elevation="3dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingBottom="@dimen/size_5dp"
            android:text="@string/back"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20sp" />

        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/size_10dp"
            android:background="@drawable/app_button_bg"
            android:elevation="5dp"
            android:fontFamily="@font/robotoregular"
            android:paddingLeft="@dimen/size_10dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingRight="@dimen/size_10dp"
            android:paddingBottom="@dimen/size_5dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_10dp"
        android:fontFamily="@font/robotobold"
        android:maxLines="2"
        android:padding="@dimen/size_10dp"
        android:layout_marginStart="@dimen/size_10dp"
        android:text="Disjkstra's Shotest-Path Algorithm: Correctness Proof"
        android:textColor="@color/appColor"
        android:textSize="@dimen/size_20sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/basicInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginStart="@dimen/size_20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/course"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Md. Rohim"
                        android:textSize="@dimen/text_size_10_sp" />

                    <View
                        android:layout_width="@dimen/size_10dp"
                        android:layout_height="@dimen/size_10dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/size_20dp"
                        android:layout_marginRight="@dimen/size_20dp"
                        android:background="@drawable/filled_circle" />

                    <TextView
                        android:id="@+id/section"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CSE 101"
                        android:textColor="#90BE47"
                        android:textSize="@dimen/text_size_10_sp" />

                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginTop="@dimen/size_10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/date"
                    android:textSize="@dimen/text_size_16_sp" />

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:text="22 Julu, 2019"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_16_sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:orientation="vertical"
                android:padding="@dimen/size_20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/description"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_14_sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:background="@drawable/square_border_ash">

                    <TextView
                        android:id="@+id/description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/size_5dp"
                        android:textColor="@color/ashTextColor"
                        android:textSize="@dimen/text_size_14_sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
        <Button
            android:layout_gravity="center"
            android:id="@+id/delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/app_button_bg"
            android:elevation="5dp"
            android:fontFamily="@font/robotoregular"
            android:paddingStart="@dimen/size_20dp"
            android:paddingTop="@dimen/size_5dp"
            android:paddingEnd="@dimen/size_20dp"
            android:paddingBottom="@dimen/size_5dp"
            android:text="Delete"
            android:layout_marginBottom="@dimen/size_20dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/size_20sp" />
    </LinearLayout>
</ScrollView>