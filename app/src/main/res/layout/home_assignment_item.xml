<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="@dimen/size_10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:padding="@dimen/size_10dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="1."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2.5"
        android:layout_width="0dp"
        android:paddingStart="@dimen/size_20dp"
        android:layout_height="wrap_content">
        <TextView
            android:paddingTop="@dimen/size_5dp"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_12_sp"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title" />
        <LinearLayout
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/subject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="subject"
                android:textColor="@color/ash_b5"
                android:textSize="@dimen/text_size_10_sp"
                android:textStyle="normal" />

            <View
                android:layout_width="@dimen/size_10dp"
                android:layout_height="@dimen/size_10dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/size_20dp"
                android:layout_marginRight="@dimen/size_20dp"
                android:background="@drawable/filled_circle_ash71" />

            <TextView
                android:id="@+id/section"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"
                android:textColor="@color/ash_b5"
                android:textSize="@dimen/text_size_10_sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/size_5dp"
            android:textColor="@color/appColor"
            android:textSize="@dimen/text_size_12_sp"
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="15 July" />
        <TextView
            android:gravity="center_horizontal"
            android:paddingTop="@dimen/size_5dp"
            android:textColor="@color/ash_b5"
            android:textSize="@dimen/text_size_10_sp"
            android:id="@+id/dayLeft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="6 days left" />

    </LinearLayout>



</LinearLayout>