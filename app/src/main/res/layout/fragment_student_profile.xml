    <!--app:tabSelectedTextColor="@color/black"-->
    <!--app:tabTextColor="@color/white" />-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/profile_bg_edoozz"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/size_20dp">

            <ImageView
                android:padding="@dimen/size_5dp"
                android:id="@+id/editBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="@dimen/size_10dp"
                android:src="@drawable/white_pen" />

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/ashColor"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Jow Andrewo"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_25_sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_5dp"
                android:text="Result Breakdown"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12_sp" />

            <TextView
                android:id="@+id/studentId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/size_5dp"
                android:text="Result Breakdown"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12_sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/total"
            android:layout_below="@+id/top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/size_10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Currently Enrolled"
                    android:textColor="#B5B5B5"
                    android:textSize="@dimen/text_size_12_sp" />

                <TextView
                    android:id="@+id/currentCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_40_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courses"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_10_sp" />

            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_10dp"
                android:background="@color/ashColor" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Completed (All-time)"
                    android:textColor="#B5B5B5"
                    android:textSize="@dimen/text_size_12_sp" />

                <TextView
                    android:id="@+id/totalCourse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="16"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_40_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Courses"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_10_sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/header"
            android:layout_below="@id/total"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_10dp"
            android:background="@color/appColor"
            android:elevation="@dimen/size_3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/my_custom_bold_font"
                android:gravity="center"
                android:padding="@dimen/size_10dp"
                android:text="Course"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16_sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_10dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/gradePoint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:fontFamily="@font/my_custom_bold_font"
                android:gravity="center"
                android:text="Attendance"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16_sp"
                android:textStyle="bold" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_10dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/grade"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/my_custom_bold_font"
                android:gravity="center"
                android:padding="@dimen/size_10dp"
                android:text="Result"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16_sp"
                android:textStyle="bold" />


        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/header"
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:scrollbars="vertical"
            app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />
    </RelativeLayout>
</ScrollView>