<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/congrats_bg"
    tools:context=".fragment.QuizScoreFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="165dp">


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:background="@drawable/white_shadow"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/avatar"
            app:civ_border_color="@color/ashColor"
            app:civ_border_width="2dp"
            app:civ_circle_background_color="@color/black" />


    </RelativeLayout>
    <TextView
        android:id="@+id/message"
        android:layout_above="@+id/marks"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_24_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_20dp"
        android:text="Congrats! Your Mark is" />
    <TextView
        android:id="@+id/marks"
        android:layout_above="@+id/quizNo"
        android:layout_marginBottom="@dimen/size_20dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_48_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_5dp"
        android:text="19" />

    <TextView
        android:id="@+id/quizNo"
        android:layout_above="@+id/subject"
        android:layout_marginBottom="@dimen/size_5dp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_20dp"
        android:text="Quiz 1" />
    <TextView
        android:id="@+id/subject"
        android:layout_marginBottom="@dimen/size_50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/view"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="@dimen/size_15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_5dp"
        android:text="Advanced Software Engineering" />

    <Button
        android:layout_marginBottom="@dimen/size_100dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/size_10dp"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_50dp"
        android:layout_marginRight="@dimen/size_50dp"
        android:background="@drawable/rounded_white"
        android:padding="@dimen/size_10dp"
        android:text="View"
        android:textAllCaps="false"
        android:textColor="@color/ans_select"
        android:textSize="@dimen/size_17sp"
        android:textStyle="bold" />

</RelativeLayout>