<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.6"
        android:orientation="vertical"
        android:padding="@dimen/size_5dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/my_custom_medium_font"
            android:gravity="center"
            android:padding="@dimen/size_5dp"
            android:text="Francine Bradley"
            android:textColor="@color/ashTextColor"
            android:textSize="@dimen/size_15sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/studentId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/my_custom_medium_font"
            android:gravity="center"
            android:text="142362020"
            android:textColor="@color/ash_b5"
            android:textSize="@dimen/text_size_10_sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/viewLl"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/section_cell_gradient_blue"
            android:gravity="center"
            android:padding="@dimen/size_5dp">

            <TextView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/my_custom_medium_font"
                android:gravity="center"

                android:text="View"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18_sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteLl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@drawable/section_cell_gradient_red"
            android:gravity="center"
            android:paddingStart="@dimen/size_15dp"
            android:paddingEnd="@dimen/size_15dp">

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:src="@drawable/delete_icon" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
