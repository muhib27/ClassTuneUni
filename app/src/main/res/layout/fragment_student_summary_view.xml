    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="30dp"
                    android:gravity="center"
                    android:src="@drawable/avatar"
                    app:civ_border_color="@color/ashColor"
                    app:civ_border_width="2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_10dp"
                    android:text="Joe Andrewos"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_22_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/size_5dp"
                    android:text="CSE 101"
                    android:textColor="@color/ashTextColor"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Summer 2019"
                    android:textColor="@color/ashTextColor"
                    android:textSize="@dimen/text_size_12_sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_margin="@dimen/size_20dp"
                    android:background="@color/appColor" />

                <Button
                    android:id="@+id/attendance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/size_11dp"
                    android:layout_marginRight="@dimen/size_11dp"
                    android:background="@drawable/app_ash_button_bg"
                    android:text="Attendance"
                    android:textAllCaps="false"
                    android:textColor="@color/ashTextColor"
                    android:textSize="@dimen/size_15sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/top"
                android:paddingLeft="@dimen/size_10dp"
                android:paddingRight="@dimen/size_10dp"
                android:paddingBottom="@dimen/size_10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cardView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_1dp"
                        android:elevation="3dp"
                        android:padding="@dimen/size_10dp"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#717171"
                                android:gravity="center"
                                android:padding="@dimen/size_10dp"
                                android:text="Total Class"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18_sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center"
                                android:padding="@dimen/size_20dp"
                                android:text="16"
                                android:textColor="#717171"
                                android:textSize="@dimen/text_size_40_sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cardView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_1dp"
                        android:elevation="3dp"
                        android:padding="@dimen/size_10dp"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/appColor"
                                android:gravity="center"
                                android:padding="@dimen/size_10dp"
                                android:text="Total Class"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18_sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center"
                                android:padding="@dimen/size_20dp"
                                android:text="16"
                                android:textColor="@color/appColor"
                                android:textSize="@dimen/text_size_40_sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/cardView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/size_1dp"
                        android:elevation="3dp"
                        android:padding="@dimen/size_10dp"
                        card_view:cardCornerRadius="0dp"
                        card_view:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="#4495FF"
                                android:gravity="center"
                                android:padding="@dimen/size_10dp"
                                android:text="Total Class"
                                android:textColor="@color/white"
                                android:textSize="@dimen/text_size_18_sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/white"
                                android:gravity="center"
                                android:padding="@dimen/size_20dp"
                                android:text="16"
                                android:textColor="#4495FF"
                                android:textSize="@dimen/text_size_40_sp" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/summary"
                android:id="@+id/listHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_grade_obtained"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="@dimen/size_10dp"
                    android:text="Grade Obtained"
                    android:textSize="@dimen/text_size_22_sp" />

                <TextView
                    android:id="@+id/grade_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_grade_obtained"
                    android:gravity="center"
                    android:text="A"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_48_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/breakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/grade_tv"
                    android:layout_marginTop="@dimen/size_20dp"
                    android:gravity="center"
                    android:padding="@dimen/size_10dp"
                    android:text="Result Breakdown"
                    android:textSize="@dimen/text_size_16_sp" />

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/breakdown"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:background="@color/appColor"
                    android:elevation="@dimen/size_3dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/my_custom_bold_font"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="Course"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16_sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/gradePoint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.2"
                        android:fontFamily="@font/my_custom_bold_font"
                        android:gravity="center"
                        android:text="Grade Point"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16_sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_marginBottom="@dimen/size_10dp"
                        android:background="@color/white" />

                    <TextView
                        android:id="@+id/grade"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/my_custom_bold_font"
                        android:gravity="center"
                        android:padding="@dimen/size_10dp"
                        android:text="Grade"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_16_sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/listHeader"
                android:background="@null"
                android:scrollbars="vertical"
                app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerView"
                android:layout_marginLeft="@dimen/size_10dp"
                android:layout_marginRight="@dimen/size_10dp"
                android:layout_marginBottom="@dimen/size_20dp"
                android:background="#E6E6E6"
                android:elevation="@dimen/size_3dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/total"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/my_custom_bold_font"
                    android:gravity="center"
                    android:padding="@dimen/size_10dp"
                    android:text="Total"
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_22_sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/hundred"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.2"
                    android:fontFamily="@font/my_custom_bold_font"
                    android:gravity="center"
                    android:padding="@dimen/size_10dp"
                    android:text="100%"
                    android:textColor="#717171"
                    android:textSize="@dimen/text_size_18_sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/totalObtained"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/my_custom_bold_font"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingTop="@dimen/size_10dp"
                    android:text="86"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18_sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>