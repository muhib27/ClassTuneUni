<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/size_10dp"
    android:elevation="3dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp">

    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/courseImg"
            android:layout_width="match_parent"
            android:layout_height="73dp"
            android:scaleType="centerCrop"
            android:src="@drawable/news_poster" />

        <TextView
            android:id="@+id/courseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/size_5dp"
            android:text="Web Architect"
            android:textSize="@dimen/text_size_12_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/instructor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Kamran Akmol"
            android:textColor="@color/ash_b5"
            android:textSize="@dimen/text_size_10_sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/size_20dp"
            android:background="@drawable/app_button_bg"
            android:gravity="center"
            android:padding="@dimen/size_6dp"
            android:text="View"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_12_sp"
            android:textStyle="normal" />

    </LinearLayout>

</android.support.v7.widget.CardView>
