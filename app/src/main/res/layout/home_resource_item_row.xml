<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardView"
    android:layout_marginTop="@dimen/size_3dp"
    android:layout_marginBottom="@dimen/size_3dp"
    android:layout_marginStart="@dimen/size_10dp"
    android:layout_marginEnd="@dimen/size_10dp"
    android:paddingBottom="@dimen/size_10dp"
    app:cardElevation="@dimen/size_5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:padding="@dimen/size_10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/pic"
                android:src="@drawable/avatar"
                android:scaleType="fitXY"
                android:layout_width="@dimen/size_50dp"
                android:layout_height="@dimen/size_50dp" />
            <LinearLayout
                android:layout_marginStart="@dimen/size_10dp"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name"
                    android:textSize="@dimen/size_15sp"
                    android:text="Ab. Rahim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/appColor"
                        android:id="@+id/subject"
                        android:textSize="@dimen/text_size_12_sp"
                        android:text="Ab. Rahim"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <View
                        android:layout_marginEnd="@dimen/size_10dp"
                        android:layout_marginStart="@dimen/size_10dp"
                        android:background="@color/ash_b5"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"/>
                    <TextView
                        android:textColor="@color/ashTextColor"
                        android:id="@+id/time"
                        android:textSize="@dimen/text_size_12_sp"
                        android:text="2 days ago"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/size_20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/resourseImg"
                    android:src="@drawable/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
                <LinearLayout
                    android:padding="@dimen/size_5dp"
                    android:orientation="vertical"
                    android:background="#B3000000"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_55dp">
                    <TextView
                        android:id="@+id/title"
                        android:text="Title"
                        android:textSize="@dimen/text_size_14_sp"
                        android:textColor="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <LinearLayout
                        android:layout_marginTop="@dimen/size_5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:textColor="@color/white"
                            android:id="@+id/course"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Md. Rohim"
                            android:textSize="@dimen/text_size_10_sp" />

                        <View
                            android:layout_width="@dimen/size_10dp"
                            android:layout_height="@dimen/size_10dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/size_10dp"
                            android:layout_marginRight="@dimen/size_10dp"
                            android:background="@drawable/filled_circle" />

                        <TextView
                            android:id="@+id/subjectCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chapter"
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/text_size_10_sp" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
