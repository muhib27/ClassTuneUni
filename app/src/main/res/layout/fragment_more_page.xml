<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_10dp"
    tools:context=".fragment.MorePageFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:gravity="center"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/ashColor"
                app:civ_border_width="2dp" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:padding="@dimen/size_10dp"
                android:layout_toEndOf="@+id/profile_image"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/size_20sp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text="Joe Andrewos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/text_size_13_sp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text="Joe Andrewos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_edit_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/size_10dp"
            android:id="@+id/rl_2"
           android:padding="@dimen/size_15dp"
            android:layout_below="@+id/rl_1"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv2"
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/enroll_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:padding="@dimen/size_10dp"
                android:layout_toEndOf="@+id/iv2"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text="@string/enroll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/next_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_3"
            android:padding="@dimen/size_15dp"
            android:layout_below="@+id/rl_2"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv3"
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/class_schedule_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:padding="@dimen/size_10dp"
                android:layout_toEndOf="@+id/iv3"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text="@string/class_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/next_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_4"
            android:padding="@dimen/size_15dp"
            android:layout_below="@+id/rl_3"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv4"
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/exam_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:padding="@dimen/size_10dp"
                android:layout_toEndOf="@+id/iv4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text="@string/exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/next_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_5"
            android:padding="@dimen/size_15dp"
            android:layout_below="@+id/rl_4"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv5"
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:padding="@dimen/size_10dp"
                android:layout_toEndOf="@+id/iv5"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text="@string/result"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/next_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_6"
            android:padding="@dimen/size_15dp"
            android:layout_below="@+id/rl_5"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv6"
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/attendance_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:padding="@dimen/size_10dp"
                android:layout_toEndOf="@+id/iv6"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text="@string/attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/next_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_7"
            android:padding="@dimen/size_15dp"
            android:layout_below="@+id/rl_6"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv7"
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/enroll_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_centerInParent="true"
                android:padding="@dimen/size_10dp"
                android:layout_toEndOf="@+id/iv7"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text="@string/change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ImageView
                android:paddingEnd="@dimen/size_20dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/next_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_below="@+id/rl_7"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:padding="@dimen/size_20dp"
                    android:textStyle="normal"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    android:text="@string/privacy_policy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            <TextView
                android:padding="@dimen/size_20dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                android:text="@string/erms_and_Conditions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="@dimen/size_20dp"
                android:textStyle="normal"
                android:textColor="@color/black"
                android:textSize="@dimen/size_15sp"
                android:text="@string/faq_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </RelativeLayout>

</ScrollView>