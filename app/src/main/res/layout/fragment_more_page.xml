<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="@dimen/size_10dp"
    tools:context=".fragment.MorePageFragment">
    <!--app:layout_behavior="@string/appbar_scrolling_view_behavior"-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/rl_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:gravity="center"
                android:src="@drawable/avatar"
                app:civ_border_color="@color/ashColor"
                app:civ_border_width="2dp" />

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/name"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text=""
                    android:textColor="@color/appColor"
                    android:textSize="@dimen/size_20sp" />

                <TextView
                    android:id="@+id/studentId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_20dp"
                    android:text=""
                    android:textColor="@color/ashTextColor"
                    android:textSize="@dimen/text_size_13_sp" />
            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
              android:padding="@dimen/size_10dp"
                android:src="@drawable/ic_edit_24dp" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_1"
            android:layout_marginTop="@dimen/size_10dp"
            android:gravity="center_vertical"
            android:padding="@dimen/size_15dp">

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/assignment_m" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/iv2"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:text="@string/assignment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/next_icon" />

        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_below="@+id/rl_2"
            android:background="@color/menu_divider"
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rl_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v1"
            android:gravity="center_vertical"
            android:padding="@dimen/size_15dp">

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/class_schedule" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/iv3"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:text="@string/class_schedule"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/next_icon" />

        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_below="@+id/rl_3"
            android:background="@color/menu_divider"
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rl_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v2"
            android:gravity="center_vertical"
            android:padding="@dimen/size_15dp">

            <ImageView
                android:id="@+id/iv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/exam" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/iv4"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/tv4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:text="@string/exam"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/next_icon" />

        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_below="@+id/rl_4"
            android:background="@color/menu_divider"
            android:id="@+id/v9"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/quizRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v9"
            android:gravity="center_vertical"
            android:padding="@dimen/size_15dp">

            <ImageView
                android:id="@+id/iv9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/quiz" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/iv9"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/quizTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:text="@string/quiz"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/next_icon" />

        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_below="@+id/quizRl"
            android:background="@color/menu_divider"
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v3"
            android:gravity="center_vertical"
            android:padding="@dimen/size_15dp">

            <ImageView
                android:id="@+id/iv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/notice_m" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/iv5"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/tv5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:text="@string/notice"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/next_icon" />

        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_below="@+id/notice"
            android:background="@color/menu_divider"
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rl_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v4"
            android:gravity="center_vertical"
            android:padding="@dimen/size_15dp">

            <ImageView
                android:id="@+id/iv6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/attendance" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/iv6"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/tv6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:text="@string/attendance"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/next_icon" />

        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_below="@+id/rl_6"
            android:background="@color/menu_divider"
            android:id="@+id/v5"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/rl_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v5"
            android:gravity="center_vertical"
            android:padding="@dimen/size_15dp">

            <ImageView
                android:id="@+id/iv7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/password" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/iv7"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:text="@string/change_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/next_icon" />

        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_below="@+id/rl_7"
            android:background="@color/menu_divider"
            android:id="@+id/v6"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/rl_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v6"
            android:gravity="center_vertical"
            android:padding="@dimen/size_15dp">

            <ImageView
                android:id="@+id/iv8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:paddingEnd="@dimen/size_20dp"
                android:src="@drawable/logout" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@+id/iv8"
                android:orientation="vertical"
                android:padding="@dimen/size_10dp">

                <TextView
                    android:id="@+id/tv7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/size_5dp"
                    android:text="@string/logout"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_16sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <!--<ImageView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_alignParentEnd="true"-->
                <!--android:layout_centerInParent="true"-->
                <!--android:paddingEnd="@dimen/size_20dp"-->
                <!--android:src="@drawable/next_icon" />-->

        </RelativeLayout>
        <View
            android:layout_marginStart="@dimen/size_20dp"
            android:layout_below="@+id/rl_8"
            android:background="@color/menu_divider"
            android:id="@+id/v7"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v7"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/priPo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_20dp"
                android:text="@string/privacy_policy"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13_sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_20dp"
                android:text="@string/erms_and_Conditions"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13_sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_20dp"
                android:text="@string/faq_support"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_13_sp"
                android:textStyle="normal" />

        </LinearLayout>
    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>