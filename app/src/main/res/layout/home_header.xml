<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/size_5dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_1dp"
            android:elevation="3dp"
            android:padding="@dimen/size_10dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/appColor">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="@dimen/size_10dp"
                        android:text="@string/attendance"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12_sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:paddingEnd="@dimen/size_5dp"
                        android:src="@drawable/ic_play_arrow_white_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/size_10dp">

                    <TextView
                        android:id="@+id/headerSubCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="CSE 101"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/text_size_14_sp" />

                    <TextView
                        android:maxLines="1"
                        android:id="@+id/total"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="@dimen/size_5dp"
                        android:text="15/16 days"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_10_sp" />

                    <TextView
                        android:id="@+id/parcentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="94%"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/text_size_25_sp" />
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_1dp"
            android:elevation="3dp"
            android:padding="@dimen/size_10dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/appColor">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="@dimen/size_10dp"
                        android:text="@string/next_class"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12_sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:paddingEnd="@dimen/size_5dp"
                        android:src="@drawable/ic_play_arrow_white_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/size_10dp"
                    android:paddingBottom="@dimen/size_10dp">

                    <TextView
                        android:id="@+id/nextSubCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="CSE 101"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/text_size_14_sp" />

                    <TextView
                        android:id="@+id/nextTeacher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="@dimen/size_5dp"
                        android:maxLines="1"
                        android:text="Md. Rahim"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_10_sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/nextClassTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:text="10:30"
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/text_size_25_sp" />

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_toEndOf="@+id/nextClassTime"-->
                            <!--android:background="@color/white"-->
                            <!--android:paddingBottom="@dimen/size_3dp"-->
                            <!--android:text="am"-->
                            <!--android:textColor="@color/appColor"-->
                            <!--android:textSize="@dimen/size_16sp" />-->
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cardView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_1dp"
            android:elevation="3dp"
            android:padding="@dimen/size_10dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/appColor">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:padding="@dimen/size_10dp"
                        android:text="@string/due"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_12_sp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:paddingEnd="@dimen/size_5dp"
                        android:src="@drawable/ic_play_arrow_white_24dp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/size_10dp"
                    android:paddingBottom="@dimen/size_10dp">

                    <TextView
                        android:id="@+id/dueSubCode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:text="PHY 101"
                        android:textColor="@color/appColor"
                        android:textSize="@dimen/text_size_14_sp" />

                    <TextView
                        android:maxLines="1"
                        android:id="@+id/dueTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:gravity="center"
                        android:padding="@dimen/size_5dp"
                        android:text="Assignment"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_10_sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_horizontal">

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/white"
                            android:gravity="center"
                            android:text="24"
                            android:textColor="@color/appColor"
                            android:textSize="@dimen/text_size_25_sp" />

                        <!--<TextView-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:layout_toEndOf="@+id/date"-->
                            <!--android:background="@color/white"-->
                            <!--android:paddingBottom="@dimen/size_3dp"-->
                            <!--android:text="July"-->
                            <!--android:textColor="@color/appColor"-->
                            <!--android:textSize="@dimen/size_16sp" />-->
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
